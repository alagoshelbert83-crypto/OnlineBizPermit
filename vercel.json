{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "Applicant-dashboard/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "Admin-dashboard/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "Staff-dashboard/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/Applicant-dashboard/(.*)",
      "dest": "/Applicant-dashboard/$1"
    },
    {
      "src": "/Admin-dashboard/(.*)",
      "dest": "/Admin-dashboard/$1"
    },
    {
      "src": "/Staff-dashboard/(.*)",
      "dest": "/Staff-dashboard/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
